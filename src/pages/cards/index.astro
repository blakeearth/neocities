---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import Layout from "../../layouts/BlogPost.astro";

const posts = (
  await getCollection("cards", ({ data }) => data.draft !== true)
).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="All Cards">
  <ul class="cards grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {
      posts.map((post) => (
        <li class="flex flex-col border gap-2 aspect-square p-4 overflow-auto">
          <a href={`/cards/${post.id}/`}>
            <h4 class="text-2xl font-bold">{post.data.title}</h4>
          </a>
          <p class="date">
            <FormattedDate date={post.data.pubDate} />
          </p>
          <p class="text-sm">{post.data.description}</p>
        </li>
      ))
    }
  </ul>
</Layout>
