{
    "name": "blake.earth",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "gen": "tinacms dev -c \"exit\"",
        "exit": "env-cmd tsx src/utils/exit-parent-process.ts",
        "dev": "npm run process-books:dev && tinacms dev -c \"astro dev\"",
        "build": "npm run process-books:build && tinacms build && astro build",
        "preview": "astro preview",
        "process-books:dev": "env-cmd tsx src/utils/process-book-details.ts --dev",
        "process-books:build": "env-cmd tsx src/utils/process-book-details.ts",
        "astro": "astro"
    },
    "dependencies": {
        "@astrojs/mdx": "^4.3.13",
        "@astrojs/rss": "^4.0.15",
        "@astrojs/sitemap": "^3.7.0",
        "@tailwindcss/vite": "^4.1.18",
        "astro": "^5.17.2",
        "astro-auto-import": "^0.5.1",
        "cli-progress": "^3.12.0",
        "node-fetch": "^3.3.2",
        "tailwindcss": "^4.1.18",
        "tinacms": "^3.4.1",
        "tsx": "^4.21.0"
    },
    "devDependencies": {
        "@tinacms/cli": "^2.1.5",
        "@types/cli-progress": "^3.11.6",
        "@types/node": "^25.2.3",
        "@types/node-fetch": "^2.6.13",
        "env-cmd": "^11.0.0"
    }
}
